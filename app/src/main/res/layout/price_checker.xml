<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar.CryptoKit">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/price_checker"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="@string/price_checker"
            android:textSize="30sp" />

        <Button
            android:id="@+id/logout_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingEnd="20dp"
            android:paddingStart="10dp"
            android:gravity="right"
            android:text="@string/logout" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/label_symbol"
            android:layout_width="257dp"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="@string/placeholder_name"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/label_price"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="@string/placeholder_price"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/label_24h"
            android:layout_width="61dp"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="@string/placeholder_percent_change"
            android:textSize="14sp" />

    </LinearLayout>

    <include layout="@layout/content_main"/>

</LinearLayout>
