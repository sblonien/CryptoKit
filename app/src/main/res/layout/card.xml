<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:id="@+id/relative_card">

    <TextView
        android:id="@+id/asset_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="1"
        android:textColor="#000"
        android:textSize="17sp" />

    <ImageView
        android:id="@+id/asset_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="-112dp"
        android:layout_toStartOf="@+id/asset_name"
        android:contentDescription="@string/crypto_asset_icon"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/asset_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="125dp"
        android:layout_marginTop="13dp"
        android:text="Ethereum"
        android:textColor="#000"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/asset_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/asset_name"
        android:layout_marginBottom="12dp"
        android:text="ETH"
        android:textColor="#000"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/asset_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/asset_symbol"
        android:layout_marginEnd="86dp"
        android:text="$100"
        android:textColor="#000"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/asset_percent_change_24h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/asset_symbol"
        android:layout_marginEnd="20dp"
        android:text="5%"
        android:textColor="#000"
        android:textSize="17sp"
        tools:ignore="HardcodedText" />

    <com.github.aakira.expandablelayout.ExpandableLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/expandableLayout"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/asset_image"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="vertical"
        app:ael_interpolator="bounce"
        app:ael_orientation="vertical">

        <TextView
            android:id="@+id/asset_volume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/asset_symbol"
            android:text="vol $10,000,000"
            android:textColor="#000"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/asset_market_cap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/asset_volume"
            android:text="cap $100,000,000"
            android:textColor="#000"
            android:textSize="17sp" />

    </com.github.aakira.expandablelayout.ExpandableLinearLayout>

</RelativeLayout>