<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar.CryptoKit">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/logout_button"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="0dp"
            android:padding="0dp"
            android:textSize="14sp"
            android:gravity="center"
            android:text="@string/logout" />

        <TextView
            android:id="@+id/price_checker"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="@string/price_checker"
            android:textSize="24sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="24dp">

        <TextView
            android:id="@+id/label_symbol"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="123dp"
            android:fontFamily="sans-serif"
            android:gravity="end"
            android:text="@string/placeholder_name"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/label_price"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="103dp"
            android:fontFamily="sans-serif"
            android:gravity="end"
            android:text="@string/placeholder_price"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/label_24h"
            android:layout_width="87dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="10dp"
            android:fontFamily="sans-serif"
            android:gravity="end"
            android:text="@string/placeholder_percent_change"
            android:textSize="14sp" />

    </RelativeLayout>

    <include layout="@layout/content_main"/>

</LinearLayout>
